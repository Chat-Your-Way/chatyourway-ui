{
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "requireConfigFile":false,
    "ecmaVersion": 2020
  },
  "extends": [
    "plugin:prettier/recommended",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/recommended"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "*"
    },
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    }
  },
  "plugins": [
    "prettier",
    "react",
    "react-hooks"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "max-len": [
      "warn",
      120
    ],
    "react/prop-types": "off",
    "import/no-cycle": [
      "error",
      {
        "maxDepth": 1
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "error"
        ]
      }
    ],
    "import/namespace": "off"
  }
}
